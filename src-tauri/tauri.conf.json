{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tricko Client",
  "version": "0.1.0",
  "identifier": "pro.tricko.client",
  "build": {
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "tricko"
        ]
      }
    }
  },
  "bundle": {
    "publisher": "robertpakalns",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/tricko-32.png",
      "icons/tricko-48.png",
      "icons/tricko-64.png",
      "icons/tricko-128.png",
      "icons/tricko-256.png",
      "icons/tricko.ico"
    ]
  }
}